{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nexport default {\n  name: 'ToDoList',\n\n  data() {\n    return {\n      newTodo: '',\n      todos: [],\n      filter: null\n    };\n  },\n\n  methods: {\n    addTodo() {\n      if (this.newTodo.trim() !== '') {\n        this.todos.push({\n          title: this.newTodo.trim(),\n          done: false\n        });\n        this.newTodo = '';\n      }\n    },\n\n    removeTodo(todo) {\n      const index = this.todos.indexOf(todo);\n\n      if (index !== -1) {\n        this.todos.splice(index, 1);\n      }\n    },\n\n    toggleDone(todo) {\n      todo.done = !todo.done;\n    },\n\n    filterUndone() {\n      this.filter = 'undone';\n    }\n\n  },\n  computed: {\n    filteredTodos() {\n      if (this.filter === 'undone') {\n        return this.todos.filter(todo => !todo.done);\n      } else {\n        return this.todos;\n      }\n    }\n\n  }\n};","map":{"version":3,"mappings":";AAgEA,eAAe;EACbA,IAAI,EAAE,UADO;;EAGbC,IAAI,GAAG;IACL,OAAO;MACLC,OAAO,EAAE,EADJ;MAELC,KAAK,EAAE,EAFF;MAGLC,MAAM,EAAE;IAHH,CAAP;EAKD,CATY;;EAWbC,OAAO,EAAE;IACPC,OAAO,GAAG;MACR,IAAI,KAAKJ,OAAL,CAAaK,IAAb,OAAwB,EAA5B,EAAgC;QAC9B,KAAKJ,KAAL,CAAWK,IAAX,CAAgB;UACdC,KAAK,EAAE,KAAKP,OAAL,CAAaK,IAAb,EADO;UAEdG,IAAI,EAAE;QAFQ,CAAhB;QAIA,KAAKR,OAAL,GAAe,EAAf;MACF;IACD,CATM;;IAUPS,UAAU,CAACC,IAAD,EAAO;MACf,MAAMC,KAAI,GAAI,KAAKV,KAAL,CAAWW,OAAX,CAAmBF,IAAnB,CAAd;;MACA,IAAIC,KAAI,KAAM,CAAC,CAAf,EAAkB;QAChB,KAAKV,KAAL,CAAWY,MAAX,CAAkBF,KAAlB,EAAyB,CAAzB;MACF;IACD,CAfM;;IAgBPG,UAAU,CAACJ,IAAD,EAAO;MACfA,IAAI,CAACF,IAAL,GAAY,CAACE,IAAI,CAACF,IAAlB;IACD,CAlBM;;IAmBPO,YAAY,GAAG;MACb,KAAKb,MAAL,GAAc,QAAd;IACF;;EArBO,CAXI;EAkCbc,QAAQ,EAAE;IACRC,aAAa,GAAG;MACd,IAAI,KAAKf,MAAL,KAAgB,QAApB,EAA8B;QAC5B,OAAO,KAAKD,KAAL,CAAWC,MAAX,CAAkBQ,IAAG,IAAK,CAACA,IAAI,CAACF,IAAhC,CAAP;MACF,CAFA,MAEO;QACL,OAAO,KAAKP,KAAZ;MACF;IACF;;EAPQ;AAlCG,CAAf","names":["name","data","newTodo","todos","filter","methods","addTodo","trim","push","title","done","removeTodo","todo","index","indexOf","splice","toggleDone","filterUndone","computed","filteredTodos"],"sourceRoot":"","sources":["C:\\Users\\Lenovo\\Downloads\\28-pbk-uts-223510373-main\\src\\components\\ToDoList.vue"],"sourcesContent":["<template>\n  <div class=\"container\">\n    <div class=\"row justify-content-center\">\n      <div class=\"col-md-10\">\n        <div class=\"card\">\n          <div class=\"card-header bg-primary text-white\">\n            <h1 class=\"text-center\">Tanny Apriliani</h1>\n            <h2 class=\"text-center\">ToDo List Keranjang Belanja</h2>\n          </div>\n          <div class=\"card-body\">\n            <form @submit.prevent=\"addTodo\" class=\"mb-3\">\n              <div class=\"row align-items-center\">\n                <div class=\"col-9\">\n                  <input v-model=\"newTodo\" type=\"text\" class=\"form-control form-control-sm\" placeholder=\"Tambahkan item baru\">\n                </div>\n                <div class=\"col-3\">\n                  <button class=\"btn btn-primary btn-sm btn-block\" type=\"submit\">\n                    <i class=\"bi bi-plus\"></i> Tambah\n                  </button>\n                </div>\n              </div>\n            </form>\n            <div class=\"table-responsive\">\n              <table class=\"table table-bordered table-striped\">\n                <thead class=\"bg-secondary text-white\">\n                  <tr>\n                    <th>#</th>\n                    <th>Item</th>\n                    <th>Status</th>\n                    <th>Aksi</th>\n                  </tr>\n                </thead>\n                <tbody>\n                  <tr v-for=\"(todo, index) in filteredTodos\" :key=\"todo.title\" :class=\"{ 'text-decoration-line-through': todo.done }\">\n                    <td>{{ index + 1 }}</td>\n                    <td>{{ todo.title }}</td>\n                    <td>\n                      <button class=\"btn btn-link btn-sm\" @click=\"toggleDone(todo)\">\n                        <i v-if=\"todo.done\" class=\"bi bi-check-square-fill\"></i>\n                        <i v-else class=\"bi bi-square\"></i>\n                      </button>\n                    </td>\n                    <td>\n                      <button class=\"btn btn-danger btn-sm\" @click=\"removeTodo(todo)\">\n                        <i class=\"bi bi-trash-fill\"></i>\n                      </button>\n                    </td>\n                  </tr>\n                </tbody>\n              </table>\n            </div>\n            <div class=\"text-end mt-3\">\n              <button class=\"btn btn-primary btn-sm\" @click=\"filterUndone\">\n                Tampilkan yang Belum Selesai\n              </button>\n            </div>\n          </div>\n        </div>\n      </div>\n    </div>\n  </div>\n</template>\n\n<script>\nexport default {\n  name: 'ToDoList',\n\n  data() {\n    return {\n      newTodo: '',\n      todos: [],\n      filter: null\n    };\n  },\n\n  methods: {\n    addTodo() {\n      if (this.newTodo.trim() !== '') {\n        this.todos.push({\n          title: this.newTodo.trim(),\n          done: false\n        });\n        this.newTodo = '';\n      }\n    },\n    removeTodo(todo) {\n      const index = this.todos.indexOf(todo);\n      if (index !== -1) {\n        this.todos.splice(index, 1);\n      }\n    },\n    toggleDone(todo) {\n      todo.done = !todo.done;\n    },\n    filterUndone() {\n      this.filter = 'undone';\n    }\n  },\n  computed: {\n    filteredTodos() {\n      if (this.filter === 'undone') {\n        return this.todos.filter(todo => !todo.done);\n      } else {\n        return this.todos;\n      }\n    }\n  }\n};\n</script>\n\n<style scoped>\n.text-decoration-line-through {\n  text-decoration: line-through;\n}\n</style>\n<style scoped>\n.text-decoration-line-through {\n  text-decoration: line-through;\n}\n\n.done-item {\n  color: #808080; /* Warna abu-abu */\n}\n</style>\n"]},"metadata":{},"sourceType":"module"}